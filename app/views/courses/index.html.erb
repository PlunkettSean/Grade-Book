<h1>View <%= pluralize(@courses.count, "Courses") %></h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Professor</th>
			<th>Room</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @courses.each do |course| %>
		<tr>
			<td><%= course.title %></td>
			<td><%= course.professor %></td>
			<td><%= course.room %></td>
			<td>
				<a href="/courses/<%= course.id %>/students">Students</a> |
				<a href="/courses/<%= course.id %>/assignments">Assignments</a> |
				<a href="/courses/<%= course.id %>/edit">Edit</a> |
				<a href="/courses/<%= course.id %>" data-method="delete"
					data-confirm="Are you sure?">Delete</a>

				
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
