<h1>Edit <%= @course.title %> </h1>
<a class="btn btn-dark" href="/courses" role="button">Back</a>
<p></p>
<form action="/courses/ <%= @course.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Title:</label>
		<input type="text" name="course[title]" value="<%= @course.title %>">
	</p>
	<p>
		<label>Professor:</label>
		<input type="text" name="course[professor]" value="<%= @course.professor %>">
	</p>
	<p>
		<label>Room:</label>
		<input type="text" name="course[room]" value="<%= @course.room %>">

	</p>
	<input type="submit" value="Update">
</form>

<% if flash[:errors] %>|
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>
