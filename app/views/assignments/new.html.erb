<h1>Create Assignment</h1>

<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
	<strong>Holy guacamole!</strong> <%= e %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% end %>
<% end %>
<% if flash[:notice] %>
<div class="alert alert-warning alert-dismissible fade show" role="alert">
	<strong>Holy guacamole!</strong> <%= flash[:notice] %>
	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>
<% end %>

<div class="container-fluid">
	<button type="button" class="btn btn-dark" onclick="history.back()">Back</button>
	<br><br>
	<div class="container rounded bg-secondary">
		<form action="/courses/<%= @course.id %>/assignments" method="post">
			<br>
			<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
			<div class="form-group">
				<label for="assignmentName"><b>Assignment Name</b></label>
				<input type="text" class="form-control" name="assignment[name]" id="assignmentName" placeholder="Enter Assignment Name">
			</div>
			<div class="form-group">
				<label for="assignmentDesc"><b>Assignment Description</b></label>
				<input type="text" class="form-control" name="assignment[description]" id="assignmentDesc" placeholder="Enter Assignment Desc">
			</div>
			<input type="hidden" name="assignment[course_id]" value ="<%= @course.id %>">
			<input type="submit" class="btn btn-success" name="Create">
		</form>
		<br>
	</div>
</div>