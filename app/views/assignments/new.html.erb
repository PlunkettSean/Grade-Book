<h1>Create Assignment</h1>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
	  	<strong>Holy guacamole!</strong> <%= e %>
	  	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    	<span aria-hidden="true">&times;</span>
	 	</button>
	</div>
	<% end %>
<% end %>
<% if flash[:notice] %>
	<div class="alert alert-warning alert-dismissible fade show" role="alert">
	  	<strong>Holy guacamole!</strong> <%= flash[:notice] %>
	  	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
	    	<span aria-hidden="true">&times;</span>
	 	</button>
	</div>
<% end %>
<a class="btn btn-dark" href="/courses/<%= @course.id %>/assignments" role="button">Back</a>
<p></p>
<form action="/courses/<%= @course.id %>/assignments" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label for="assignment[name]">Name</label>
		<input type="text" name="assignment[name]">
	</p>
	<p>
		<label for="assignment[description]">Description</label>
		<input type="text" name="assignment[description]">
		<input type="hidden" name="assignment[course_id]" value ="<%= @course.id %>">
	</p>
	<input type="submit" class="btn btn-success" name="Create">
</form>