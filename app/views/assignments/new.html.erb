<h1>Create Assignment</h1>
<a class="btn btn-dark" href="/courses/<%= @course.id %>/assignments" role="button">Back</a>
<p></p>
<form action="/courses/<%= @course.id %>/assignments" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>
		<label>Name</label>
		<input type="text" name="assignment[name]">
	</p>
	<p>
		<label>Description</label>
		<input type="text" name="assignment[description]">
		<input type="hidden" name="assignment[course_id]" value ="<%= @course.id %>">
	</p>
	<input type="submit" name="Create">
</form>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
	<p><%= e %></p>
	<% end %>
<% end %>

<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
<% end %>